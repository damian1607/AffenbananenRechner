<ui:Page x:Class="AffenbananenRechner.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AffenbananenRechner.Pages"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <ikw:SimpleStackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="5">
            <ikw:SimpleStackPanel Orientation="Horizontal">
                <TextBlock Text="Dark Mode" FontSize="20" Margin="20"/>
                <ui:ToggleSwitch IsOn="{Binding IsDarkModeEnabled}"/>
            </ikw:SimpleStackPanel>
        </ikw:SimpleStackPanel>
    </Grid>
</ui:Page>